{
	"name": "workspace-plugin",
	"$schema": "../../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/plugins/workspace-plugin/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nx/js:swc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/libs/plugins/workspace-plugin",
				"main": "libs/plugins/workspace-plugin/src/index.ts",
				"tsConfig": "libs/plugins/workspace-plugin/tsconfig.lib.json",
				"assets": [
					"libs/plugins/workspace-plugin/*.md",
					{
						"input": "./libs/plugins/workspace-plugin/src",
						"glob": "**/!(*.ts)",
						"output": "./src"
					},
					{
						"input": "./libs/plugins/workspace-plugin/src",
						"glob": "**/*.d.ts",
						"output": "./src"
					},
					{
						"input": "./libs/plugins/workspace-plugin",
						"glob": "generators.json",
						"output": "."
					},
					{
						"input": "./libs/plugins/workspace-plugin",
						"glob": "executors.json",
						"output": "."
					}
				]
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": [
					"libs/plugins/workspace-plugin/**/*.ts",
					"libs/plugins/workspace-plugin/generators.json",
					"libs/plugins/workspace-plugin/executors.json",
					"libs/plugins/workspace-plugin/package.json"
				]
			}
		}
	},
	"tags": ["scope:shared", "type:plugin"]
}
